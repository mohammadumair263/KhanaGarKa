@model IEnumerable<FYPFinalKhanaGarKa.Models.Chef>
@{
    ViewData["Title"] = "Chef List";
}

@section StyleLink{
    <link href="~/css/fontello.css" rel="stylesheet" />
}

@Html.Partial("_PageTitlePartial", ViewData["Title"])
<!-- Content Start -->
<main class="main-content">

    <div class="container internal-body-container">
        <!-- Main container -->
        <div class="row">
            <!-- Main row -->
            <div class="col-md-12 restaurant-list-three">
                @foreach (var chef in Model)
                {
                <!-- Single Chef detail -->
                <div class="row">
                    <!-- Chef detail -->
                    <div class="col-xs-12">
                        <div class="item-block">
                            <header>
                                @*@if (chef.ImgUrl.Equals("") || chef.ImgUrl == null) { chef.ImgUrl = "img/avatar.png"; }*@
                                <a href="#"><img src="@chef.ImgUrl" alt=""></a>
                                <div class="hgroup">
                                    <h4><a href="#">@chef.FirstName @chef.LastName</a></h4>
                                    <h5><span class="label label-warning">Popular</span></h5>
                                </div>
                                <div class="header-meta">
                                    <span class="location">@chef.City @chef.Area @chef.Street</span>
                                </div>
                            </header>
                            <footer>
                                <p class="status"><strong>Min:</strong> £15</p>
                                <p class="status"><strong>Delivery:</strong> 60 min</p>
                                <p class="status">
                                    <span>
                                        <span style="color: #ED1C3B;"><i class="fa fa-star"></i></span>
                                        <span style="color: #ED1C3B;"><i class="fa fa-star"></i></span>
                                        <span style="color: #ED1C3B;"><i class="fa fa-star"></i></span>
                                        <span style="color: #CCCCCC;"><i class="fa fa-star"></i></span>
                                        <span style="color: #CCCCCC;"><i class="fa fa-star"></i></span>
                                        <span class="review">
                                            (<span>135</span>)
                                        </span>
                                    </span>
                                </p>
                                <div class="action-btn">
                                    <a class="btn btn-xs btn-success" href="#">Offer</a>
                                    <a class="btn btn-xs btn-danger" href="#">Place Order</a>
                                </div>
                            </footer>
                        </div>
                    </div>
                    <!-- END Chef detail -->
                </div>
                <!-- End Single Chef detail -->
                    }
            </div>
        </div>
        <!-- Main row end -->
    </div>
    <!-- Main container end -->
</main>
<!-- Content End -->
