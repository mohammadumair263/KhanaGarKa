@model FYPFinalKhanaGarKa.Models.ViewModels.OrderDetailViewModel
@{
    ViewData["Title"] = "Details";
    string url = "#" , url2 = "#";

    if (Model.Role.Equals("chef"))
    {
        url = Url.Action("ModifyDetails", "Home", new { role = "chef", id = Model.Order.ChefId });
        url2 = Url.Action("History", "Order", new { role = "chef", id = Model.Order.ChefId });

    }
    else if (Model.Role.Equals("customer"))
    {
        url = Url.Action("ModifyDetails", "Home", new { role = "customer", id = Model.Order.CustomerId });
        url2 = Url.Action("History", "Order", new { role = "customer", id = Model.Order.CustomerId });
    }
    else if (Model.Role.Equals("deliveryboy"))
    {
        url = Url.Action("ModifyDetails", "Home", new { role = "deliveryboy", id = Model.Order.DeliveryBoyId });
        url2 = Url.Action("History", "Order", new { role = "deliveryboy", id = Model.Order.DeliveryBoyId });
    }
}

@section StyleLink{
    <link href="~/css/order-online.css" rel="stylesheet" />
}

@Html.Partial("_PageTitlePartial", ViewData["Title"])
<!-- Content Start -->
<main class="main-content">

    <!-- Content Start -->
    <section class="cfo-area">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12 account-cfoinfo clearfix">
                    <div class="cfoaccount">
                        <ul class="list-unstyled">
                            <li><a href="@url"><i class="fa fa-home" aria-hidden="true"></i> My Account</a></li>
                            <li><a href="@url2"><i class="fa fa-history" aria-hidden="true"></i> Order History</a></li>
                        </ul>
                    </div>
                    <!-- END OF Myaccount menu  -->
                    <!-- End of account cfoInfo -->
                </div>
                <div class="col-lg-9 col-md-9 col-sm-12 col-xs-12">
                    <div class="cfoorder-info table-responsive">
                        <h2>My order details</h2>
                        <table class="table">
                            <tbody>
                                <tr class="orderth-title">
                                    <th>Chef name</th>
                                    <th>Order date</th>
                                    <th>Order type</th>
                                    <th>Payment method</th>
                                    <th>Order status</th>
                                </tr>
                                <tr class="orderdata-title">
                                    <td>@Model.Chef.FirstName @Model.Chef.LastName</td>
                                    <td>@Model.Order.OrderDate</td>
                                    <td>@Model.Order.OrderType</td>
                                    <td>Cash</td>
                                    <td>@Model.Order.OrderStatus</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="contact-details order-history">
                        <div class="account-table cfoorder-details">
                            <table class="table table-striped">
                                <tbody>
                                    <tr class="orderh-title">
                                        <th>Dish name</th>
                                        <th>Date</th>
                                        <th class="pay-th">Quantity</th>
                                        <th class="file-th">Dish ordered price</th>
                                    </tr>
                                    @foreach (var dishs in Model.Dishis)
                                    {
                                    <tr class="orderdata-title">
                                        <td>@dishs.Name</td>
                                        <td>@Model.Order.OrderDate</td>
                                        <td class="pay">@dishs.Quantity</td>
                                        <td class="pay">@dishs.Price</td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                            <div class="clearfix"></div>
                            <div class="orderhistory-total clearfix">
                                <h2><span class="total-title">Total</span> <span class="amount">@Model.Dishis.Sum(i => i.Price)</span></h2>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <!-- END OF CONTACT DETAILS SECTION -->
                </div>
            </div>
        </div>
    </section>

    <!-- Main container end -->
</main>
<!-- Content End -->
