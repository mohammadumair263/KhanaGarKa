@model FYPFinalKhanaGarKa.Models.ItemGroup
@{
    ViewData["Title"] = "Process";
}

@section StyleLink{
    <link href="~/css/order-online.css" rel="stylesheet" />
    <style>
        .cart-table:hover {
        }
    </style>
}

@Html.Partial("_PageTitlePartial", ViewData["Title"])
<!-- Content Start -->
<main class="main-content">

    <!-- Content Start -->
    <!-- Start order-online-->
    <div id="order-process">
        <div class="container">
            <div class="row order-online-top-header margin-right-zero">
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-4 zero-pad">
                    <div class="btn-back">
                        <a href="#" class="btn btn-go-back"><i class="fa fa-angle-double-left"></i> Back</a>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-8">
                    <div class="user-login-info text-right">
                        <ul class="list-unstyled list-inline">
                            <li><a href="#"><i class="fa fa-user"></i> My Account</a> <a href="#"><i class="fa fa-sign-out"></i> Sign out</a></li>
                        </ul>
                    </div>
                </div>
                <div class="clearfix"></div>
                <div class="row alert-control">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="alert-box text-center">
                            <div class="alert-danger">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="order-inner-content">
                <div class="row">
                    <div class="col-md-9">
                        <div class="order-process-left-side">
                            <div class="order-information row">
                                <div class="col-md-6">
                                    <h3 class="section-title">Order information</h3>
                                    <ul class="list-unstyled info-list">
                                        <li>
                                            <input class="custom-radio-big" type="radio" name="collection" id="collection" checked>
                                            <label for="collection">Collection</label>
                                        </li>
                                    </ul>
                                </div>
                                <div class="col-md-6">
                                    <h3 class="section-title">Special Request</h3>
                                    <textarea class="special-request" name="special-request" id="special-request"></textarea>
                                </div>
                            </div>
                            <div class="row order-delivery-address">
                                <div class="col-md-12">
                                    <h3 class="section-title">Your delivery address</h3>
                                    <input type="text" class="text" placeholder="Enter your complete address">
                                </div>
                             
                            </div>
                            <div class="row order-payment-method">
                                <div class="col-md-12">
                                    <h3 class="section-title">Payment Method</h3>
                                    <label for="method-cash"><b>Cash On Delivey</b></label>
                                </div>
                                
                            </div>
                        </div>
                    </div>
                    <!-- start cart content -->
                    <div class="col-md-3 ui-order-online-right-side">
                        <div class="mobile-order-online-cart-inner">
                            <div class="delivery-time">
                                <span class="est-deli">Estimated delivery time</span><span class="deli-time">75 <span>minutes</span></span>
                            </div>
                            <div class="clearfix"></div>
                            <div class="right-sidebar-inner-content sticky-content-right-side">
                                <div class="cart-content">
                                    <div class="cfo-cart clearfix">
                                        <div class="cart-info">
                                            <h2>My Order</h2>
                                            <div class="cart-table">
                                                <table class="table table-striped">
                                                    <tbody>
                                                        @foreach (var item in Model.Items)
                                                        {
                                                        <tr class="hobtr">
                                                            <td class="cross-td custom-spinner">
                                                                <div class="input-group spinner">
                                                                    <button class="btn btn-default cust-plus plusBtn" type="button"><i class="fa fa-plus"></i></button>
                                                                    <input type="text" class="form-control increse-val" value="1">
                                                                    <button class="btn btn-default cust-plus minusBtn" type="button"><i class="fa fa-minus"></i></button>
                                                                </div>
                                                                <span class="qnt-idn">@item.Quantity<span class="qua"></span> x</span>
                                                            </td>
                                                            <td class="itme-td">@item.Name</td>
                                                            <td class="amont-td"><i class="fa fa-times-circle-o closeBtn"></i> <span class="main-price cart_item_price">@item.Price</span></td>
                                                        </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                            <!-- start offer list -->
                                            <div class="ui-order-description">
                                                <div class="row color-gray">
                                                    <div class="col-md-8 col-xs-8">
                                                        <p>Subtotal: </p>
                                                    </div>
                                                    <div class="col-md-4 col-xs-4 text-right">
                                                        <span id="subtotal_price">@Model.Subtotal</span>
                                                    </div>
                                                </div>
                                                <div class="row color-gray">
                                                    <div class="col-md-8 col-xs-8">
                                                        <p>Delivery Charge: </p>
                                                    </div>
                                                    <div class="col-md-4 col-xs-4 text-right">
                                                        <span id="delivery_fee_price">10</span>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-8 col-xs-8">
                                                        <p>Total: </p>
                                                    </div>
                                                    <div class="col-md-4 col-xs-4 text-right">
                                                        <span id="order-total-amount" class="order-total-amount"><span id="full_total_price">@Model.Total</span></span>
                                                    </div>
                                                </div>
                                            </div>
                                            <!-- End of Order Info -->

                                            <div class="cfo-checkoutarea">
                                                <button type="submit" id="a" name="a" class="btn btn-primary btn-block custom-checkout">Proceed to Checkout</button>
                                            </div>
                                        </div>
                            </div>
                        </div>
                        <div class="min-off">
                            <ul class="list-unstyled">
                                <li>
                                    <div class="row">
                                        <div class="col-md-8">
                                            <p>Delivery fee per KM: </p>
                                        </div>
                                        <div class="col-md-4 text-right">
                                            RS:25
                                        </div>
                                    </div>
                                </li>
                                <li>
                                    <div class="row">
                                        <div class="col-md-8">
                                            <p>Delivery minimum : </p>
                                        </div>
                                        <div class="col-md-4 text-right">
                                            RS:350
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <!-- end cart content -->
                </div>
            </div>
        </div>
        <!--.container-->
    </div>
        </div>
        <!--end container-->
    </div>
    <!--#order-online-->
    <!--end order-online-->
    <!-- Content End -->
    <!-- start mobile footer nav -->
    <nav class="navbar navbar-default navbar-fixed-bottom visible-xs visible-sm mobile-cart-nav">
        <div class="mobile-cart-inner-content">
            <div class="row">
                <div class="col-md-4 col-xs-4">
                    <div class="mobile-cart-item">
                        <a id="mobileCartToggle" href="#"><i class="fa fa-shopping-basket"></i><span id="cart-item"> 10</span></a>
                    </div>
                </div>
                <div class="col-md-4 col-xs-4">
                    <div class="mobile-total-amount">Total: &pound;<span id="total-cart-amount">50</span></div>
                </div>
                <div class="col-md-4 col-xs-4">
                    <a href="#" class="btn mobile-btn-checkout">Checkout</a>
                </div>
            </div>
        </div>
    </nav>
    <!-- end mobile footer nav -->
    <!-- Main container end -->
</main>
<!-- Content End -->
