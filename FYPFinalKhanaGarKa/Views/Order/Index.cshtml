
@{
    ViewData["Title"] = "Order";
}

@section StyleLink{
    <link href="~/css/order-online.css" rel="stylesheet" />
}

@Html.Partial("_PageTitlePartial", ViewData["Title"])
<!-- Content Start -->
<main class="main-content">

    <!-- Content Start -->
    <!-- Start order-online-->
    <div id="order-online">
        <div class="container">
            <!-- start order online header top -->
            <div class="row order-online-top-header margin-right-zero">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 zero-pad">
                    <div class="orderonline-search clearfix">
                        <div class="openclose-message">
                            <p>A 24 by 7 Service!</p>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end order online header top -->

            <div class="order-inner-content">
                <div class="row">
                    <!-- start category content all -->
                    <div class="col-md-9">
                        <div class="ui-order-online-left-side">
                            <div class="row order-online-tab-nav" id="order-online-tab-nav">
                                <div class="col-md-12">
                                    <ul class="list-inline list-unstyled">
                                        <li class="active">
                                            <a href="#" class="orderOnlineTab" id="orderonlineMenuTab"> Menu</a>
                                        </li>
                                        <li>
                                            <a href="#" class="orderOnlineTab" id="orderonlineOfferTab"> Offer</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div id="left-content">
                                <div class="orderonline-menu row">
                                    <!-- start category inner content all -->
                                    <div class="col-md-12 col-sm-12">
                                        <!-- start category single content -->
                                        <div class="category-dish-content">

                                            <div class="row">
                                                <div class="clearfix"></div>
                                                <div class="col-md-12">
                                                    <div class="dish-content">
                                                        <div class="row" style="transition: all 0.50s ease-in-out">
                                                            <div class="col-md-3 dish-img">
                                                                <img class="img img-responsive img-thumbnail" alt="Image" src="img/foodimg/menuitem.jpg" />
                                                            </div>
                                                            <div class="col-md-6">
                                                                <div class="dish-name">Onion Bhaji (S)</div>
                                                                <p>Too deep fried balls of sliced onion, in chana daal batter. With mint sauce.</p>
                                                                <p><b>Allergens Info:</b> <span class="allergensInfo">Crustaceans,Gluten</span></p>
                                                            </div>
                                                            <div class="col-md-3">
                                                                <div class="dish-right-content">
                                                                    <div class="dish-price">£<span class="dish-price-int">2</span></div>
                                                                    <div class="text-right ui-order-btn">
                                                                        <a href="#"><i class="fa fa-plus addItemBtn"></i></a>
                                                                    </div>
                                                                    <div class="clearfix"></div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <!-- /.dish-content -->
                                                </div>
                                                <!-- /.col-md-12 -->
                                                <div class="col-md-12">
                                                    <div class="dish-content">
                                                        <div class="row" style="transition: all 0.50s ease-in-out">
                                                            <div class="col-md-3 dish-img">
                                                                <img class="img img-responsive img-thumbnail" alt="Image" src="img/foodimg/menuitem.jpg" />
                                                            </div>
                                                            <div class="col-md-6">
                                                                <div class="dish-name">alo gobi (S)</div>
                                                                <p>Too deep fried balls of sliced onion, in chana daal batter. With mint sauce.</p>
                                                                <p><b>Allergens Info:</b> <span class="allergensInfo">Crustaceans,Gluten</span></p>
                                                            </div>
                                                            <div class="col-md-3">
                                                                <div class="dish-right-content">
                                                                    <div class="dish-price">£<span class="dish-price-int">3</span></div>
                                                                    <div class="text-right ui-order-btn">
                                                                        <a href="#"><i class="fa fa-plus addItemBtn"></i></a>
                                                                    </div>
                                                                    <div class="clearfix"></div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <!-- /.dish-content -->
                                                </div>
                                                <!-- /.col-md-12 -->
                                            </div>

                                        </div>
                                        <!-- end category single content -->

                                    </div>
                                    <!-- end category inner content all -->
                                </div>
                                <!-- end orderonline-menu -->
                                <!-- offer content -->
                                <div class="orderonline-offer row">
                                    <!-- start category inner content all -->
                                    <div class="col-md-12 col-sm-12">
                                        <!-- start category single content -->
                                        <div class="category-dish-content">

                                            <div class="row">
                                                <div class="clearfix"></div>
                                                <div class="col-md-12">
                                                    <div class="dish-content">
                                                        <div class="row" style="transition: all 0.50s ease-in-out">
                                                            <div class="col-md-3 dish-img">
                                                                <img class="img img-responsive img-thumbnail" alt="Image" src="img/foodimg/menuitem.jpg" />
                                                            </div>
                                                            <div class="col-md-6">
                                                                <div class="dish-name">Dhmaka Offer !</div>
                                                                <p>Too deep fried balls of sliced onion, in chana daal batter. With mint sauce.</p>
                                                                <p>Plus 1 liter Coca Cola free !</p>
                                                                <p><b>Allergens Info:</b> <span class="allergensInfo">Crustaceans,Gluten</span></p>
                                                            </div>
                                                            <div class="col-md-3">
                                                                <div class="dish-right-content">
                                                                    <div class="dish-price">£<span class="dish-price-int">5</span></div>
                                                                    <div class="text-right ui-order-btn">
                                                                        <a href="#"><i class="fa fa-plus addItemBtn"></i></a>
                                                                    </div>
                                                                    <div class="clearfix"></div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <!-- /.dish-content -->
                                                </div>
                                                <!-- /.col-md-12 -->
                                            </div>

                                        </div>
                                        <!-- end category single content -->

                                    </div>
                                    <!-- end category inner content all -->
                                </div>
                                <!-- end orderonline-offer -->
                            </div>
                        </div>
                    </div>
                    <!-- end category content all -->
                    <!-- start cart content -->
                    <div class="col-md-3 ui-order-online-right-side">
                        <div class="mobile-order-online-cart-inner">
                            <div class="ui-order-policy">
                                <ul class="list-inline">
                                    <li>
                                        <input class="custom-radio-big" type="radio" name="order-policy" id="delivery" checked> <label for="delivery">Delivery</label>
                                    </li>
                                    <li>
                                        <input class="custom-radio-big" type="radio" name="order-policy" id="collection"> <label for="collection">Collection</label>
                                    </li>
                                </ul>
                            </div>
                            <div class="clearfix"></div>
                            <div class="right-sidebar-inner-content sticky-content-right-side">
                                <div class="cart-content">
                                    <div class="cfo-cart clearfix">
                                        <div class="cart-info">
                                            <h2>My Order</h2>
                                            <div class="cart-table">
                                                <table class="table table-striped">
                                                    <tbody id="cart"></tbody>
                                                </table>
                                            </div>
                                            <div class="clearfix"></div>
                                            <div class="ui-order-description">
                                                <div class="row color-gray">
                                                    <div class="col-md-8 col-xs-8">
                                                        <p>Subtotal: </p>
                                                    </div>
                                                    <div class="col-md-4 col-xs-4 text-right">
                                                        <span id="subtotal_price">0</span>
                                                    </div>
                                                </div>
                                                <div class="row color-gray">
                                                    <div class="col-md-8 col-xs-8">
                                                        <p>Delivery Charge: </p>
                                                    </div>
                                                    <div class="col-md-4 col-xs-4 text-right">
                                                        &pound;<span id="delivery_fee_price">5</span>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-8 col-xs-8">
                                                        <p>Total: </p>
                                                    </div>
                                                    <div class="col-md-4 col-xs-4 text-right">
                                                        <span id="order-total-amount" class="order-total-amount">&pound;<span id="full_total_price">0</span></span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="cfo-checkoutarea">
                                                <button type="submit" id="a" name="a" class="btn btn-primary btn-block custom-checkout">Proceed to Checkout</button>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- End of Order Info -->
                                </div>
                                <!-- end cart content -->
                                <div class="clearfix"></div>
                                <div class="min-off">
                                    <ul class="list-unstyled">
                                        <li>
                                            <div class="row">
                                                <div class="col-md-8">
                                                    <p>Delivery fee : </p>
                                                </div>
                                                <div class="col-md-4 text-right">
                                                    &pound;10
                                                </div>
                                            </div>
                                        </li>
                                        <li>
                                            <div class="row">
                                                <div class="col-md-8">
                                                    <p>Delivery minimum : </p>
                                                </div>
                                                <div class="col-md-4 text-right">
                                                    &pound;200
                                                </div>
                                            </div>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- end cart content -->
                </div>
            </div>
        </div>
        <!--.container-->
    </div>
    <!--#order-online-->
    <!--end order-online-->
    <!-- Content End -->
    <!-- start mobile footer nav -->
    <nav class="navbar navbar-default navbar-fixed-bottom visible-xs visible-sm mobile-cart-nav">
        <div class="mobile-cart-inner-content">
            <div class="row">
                <div class="col-md-4 col-xs-4">
                    <div class="mobile-cart-item">
                        <a id="mobileCartToggle" href="#"><i class="fa fa-shopping-basket"></i><span id="cart-item"> 10</span></a>
                    </div>
                </div>
                <div class="col-md-4 col-xs-4">
                    <div class="mobile-total-amount">Total: &pound;<span id="total-cart-amount">50</span></div>
                </div>
                <div class="col-md-4 col-xs-4">
                    <a href="#" class="btn mobile-btn-checkout">Checkout</a>
                </div>
            </div>
        </div>
    </nav>
    <!-- end mobile footer nav -->
</main>
<!-- Content End -->

@section ScriptsSrc{
    <script src="~/js/order-online.js"></script>
    <script src="~/lib/jquery.easing/js/jquery.easing.min.js"></script>
    <script src="~/lib/jquery-sticky/jquery.sticky.js"></script>
    <script src="~/js/cart.js"></script>
}
