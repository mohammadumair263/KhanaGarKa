
@{
    ViewData["Title"] = "Register";
}
@section StyleLink{ 
<link href="~/css/order-online.css" rel="stylesheet" />
<style>
    .reg-block h1 {
        font-family: Open Sans,sans-serif;
        color: #96a2b2;
        letter-spacing: 1px;
        font-size: 22px;
        margin-bottom: 60px;
        margin-top: 40px;
        text-align: center;
    }

    .reg-block img#logo, .text-center {
        margin-top: 40px;
    }

    #sign-up {
        margin-bottom: 40px;
        margin-top: 20px;
    }

    </style>
}
@Html.Partial("_PageTitlePartial", ViewData["Title"])
<main class="main-content">
    <!-- Content Start -->
    <section class="cfo-area">
        <div class="container">
            <div class="row">
                <div class="reg-block col-lg-9 col-lg-offset-1 col-md-9 col-md-offset-1 col-sm-12 col-xs-12">
                    <div class="contact-details myaccount-contact">
                        <center>
                            <img src="~/img/logo_gray.png" alt="" id="logo">
                            <h1>Log into you account</h1>
                        </center>
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="address-form">
                                    <div class="row">
                                        <form action="#">
                                            <div class="form-group">
                                                <div class="col-lg-offset-1 col-md-offset-1 col-lg-3 col-md-3 col-sm-12 col-xs-12">
                                                    <label for="ff">Register As *</label>
                                                </div>
                                                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                                    <select class="form-control" name="ff" id="ff">
                                                        <option value="" selected>Customer</option>
                                                        <option value="">Chef</option>
                                                        <option value="">Delivery boy</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="col-lg-offset-1 col-md-offset-1 col-lg-3 col-md-3 col-sm-12 col-xs-12">
                                                </div>
                                                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                                    <img alt="image" src="~/img/avatar.png" class="img img-responsive img-thumbnail" width="113" height="113">
                                                    <input type="file" style="margin:10px" />
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="col-lg-offset-1 col-md-offset-1 col-lg-3 col-md-3 col-sm-12 col-xs-12">
                                                    <label>First Name *</label>
                                                </div>
                                                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                                    <input type="text" name="t" class="form-control" id="t" placeholder="First Name">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="col-lg-offset-1 col-md-offset-1 col-lg-3 col-md-3 col-sm-12 col-xs-12">
                                                    <label>Last Name *</label>
                                                </div>
                                                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                                    <input type="text" name="tt" class="form-control" id="tt" placeholder="Last Name">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="col-lg-offset-1 col-md-offset-1 col-lg-3 col-md-3 col-sm-12 col-xs-12">
                                                    <label>Email Address *</label>
                                                </div>
                                                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                                    <input type="text" name="ttt" class="form-control" id="ttt" placeholder="Email Address">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="col-lg-offset-1 col-md-offset-1 col-lg-3 col-md-3 col-sm-12 col-xs-12">
                                                    <label>Password *</label>
                                                </div>
                                                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                                    <input type="password" name="ttt" class="form-control" id="ttt" placeholder="Password">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="col-lg-offset-1 col-md-offset-1 col-lg-3 col-md-3 col-sm-12 col-xs-12">
                                                    <label>Confirm Password *</label>
                                                </div>
                                                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                                    <input type="password" name="ttt" class="form-control" id="ttt" placeholder="Re-Enter Password">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="col-lg-offset-1 col-md-offset-1 col-lg-3 col-md-3 col-sm-12 col-xs-12">
                                                    <label>Mobile No *</label>
                                                </div>
                                                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                                    <input type="text" name="y" class="form-control" id="y" placeholder="Mobile No">
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <div class="col-lg-offset-1 col-md-offset-1 col-lg-3 col-md-3 col-sm-12 col-xs-12">
                                                    <label>Gender *</label>
                                                </div>
                                                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                                    <div class="radio-inline">
                                                        <label><input type="radio" name="gender" value="male" checked>Male</label>
                                                    </div>
                                                    <div class="radio-inline">
                                                        <label><input type="radio" name="gender" value="female">Female</label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="col-lg-offset-1 col-md-offset-1 col-lg-3 col-md-3 col-sm-12 col-xs-12">
                                                    <label>D/O/B *</label>
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-sm-12 col-xs-12">
                                                    <select class="form-control" name="day" id="day">
                                                        <option value="" selected>--select--</option>
                                                        <option value="">1</option>
                                                        <option value="">2</option>
                                                    </select>
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-sm-12 col-xs-12">
                                                    <select class="form-control" name="month" id="month">
                                                        <option value="" selected>--select--</option>
                                                        <option value="">1</option>
                                                        <option value="">2</option>
                                                    </select>
                                                </div>
                                                <div class="col-lg-2 col-md-2 col-sm-12 col-xs-12">
                                                    <select class="form-control" name="year" id="year">
                                                        <option value="" selected>--select--</option>
                                                        <option value="">1990</option>
                                                        <option value="">2000</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <div class="col-lg-offset-1 col-md-offset-1 col-lg-3 col-md-3 col-sm-12 col-xs-12">
                                                    <label>Address *</label>
                                                </div>
                                                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                                    <textarea name="i" id="i" cols="30" class="form-control" rows="4"></textarea>
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <div class="col-lg-offset-1 col-md-offset-1 col-lg-3 col-md-3 col-sm-12 col-xs-12">
                                                    <label></label>
                                                </div>
                                                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                                    <button type="submit" id="sign-up" name="kkk" class="btn btn-primary btn-block custom-checkout">Sign Up</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- END OF DELIVERY ADDRESS SECTION -->
                </div>
                <span class="clearfix"></span>
                <p class="text-center">Already have an account? <a class="txt-brand" asp-action="Login" asp-controller="Home">Login</a></p>
            </div>
        </div>
    </section>

    <!-- Main container end -->
</main>


<!-- Content End -->
@section Scripts
    {
    <script>
        //$('body').addClass("login-page");
    </script>
}
